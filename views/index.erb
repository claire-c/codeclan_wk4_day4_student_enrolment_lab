<h1>List of students:</h1>

<% @students.each do |student|%>
  <div>
    <p>Name: <%= student.first_name + " " + student.second_name%> </p>
    <p>House: <%= student.find_house.name%> </p>
    <p>Age: <%= student.age%> </p>
    <p><a href="/students/<%=student.id%>">View details</a></p>
  </div><hr>
<% end %>
